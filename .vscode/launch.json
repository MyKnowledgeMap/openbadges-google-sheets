  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test with debugger",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["--nolazy"],
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": [
        "--runInBand",
        "--transform={\"^.+\\\\.(js|jsx)$\": \"babel-jest\"}"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "console": "internalConsole",
      "cwd": "${workspaceRoot}"
    }
  ]
}